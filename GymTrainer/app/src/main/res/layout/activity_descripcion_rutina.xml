<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_viewRutinas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.jorge.gymtrainer.Activities.UserActivities.DescripcionRutinaActivity">

    <TextView
        android:id="@+id/tvTituloDescripcionRutina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RUTINAS"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvNombreRutinaDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvTituloDescripcionRutina"
        android:layout_marginTop="33dp"
        android:text="Nombre: Rutina Hipertrofica"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvDescripcionRutinaDescripcion"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvNombreRutinaDescripcion"
        android:layout_marginTop="18dp"
        android:text="DescripciÃ³n: "
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ivRutinaSeleccionada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gallery"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_weight="0.51"
        android:contentDescription="Seleccionada" />

    <Gallery
        android:id="@+id/gallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.31"
        android:background="@android:color/darker_gray"
        android:paddingTop="4dp"
        android:spacing="8dp" />

</LinearLayout>
