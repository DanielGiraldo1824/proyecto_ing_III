<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jorge.gymtrainer.Activities.AdminActivities.InformacionUsuarioActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvRegistroGym"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="InformaciÃ³n Usuario"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12" />

    <TextView
        android:id="@+id/tvNombreInformacionUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre: "
        android:textColor="@android:color/background_dark" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04" />

    <TextView
        android:id="@+id/tvCedulaInformacionUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cedula: "
        android:textColor="@android:color/background_dark" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04" />

    <TextView
        android:id="@+id/tvCorreoElectronicoInformacionUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo Electonico: "
        android:textColor="@android:color/background_dark" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04" />

    <Button
        android:id="@+id/btnRegistrarInformacionUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="RegistrarMensualidad"
        android:text="Registrar" />

    <Button
        android:id="@+id/btnVolverInformacionUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Atras"
        android:text="Atras" />
</LinearLayout>
